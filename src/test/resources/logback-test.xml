<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%black(%d{HH:mm:ss.SSS}) [%15.15thread{14}] %highlight(%.-1level) %cyan(%40.40logger{39}): %highlight(%msg) %replace([%marker]){'\[\]', ''}%n%highlight(%throwable)</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="org.testcontainers" level="INFO"/>
</configuration>